<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EACFCF"
    android:backgroundTint="#F4DCDC"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="116dp"
        android:layout_height="94dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="#433737"
        android:text="口"
        android:textSize="96sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="116dp"
        android:layout_height="94dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="@color/black"
        android:text="口"
        android:textColor="#F8F0F0"
        android:textColorHighlight="#D2EAEA"
        android:textColorHint="#EFDADA"
        android:textColorLink="#DCC3C3"
        android:textSize="96sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-6dp" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="146dp"
        android:layout_height="68dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="56dp"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="213dp"
        android:layout_height="137dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="308dp"
        android:backgroundTint="#FAF5F5"
        android:text="口口"
        android:textColor="#433D3D"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:layout_marginTop="512dp"
        android:backgroundTint="#E3C5C5"
        android:text="退出"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="512dp"
        android:backgroundTint="#E3CECE"
        android:text="先别动口先好好听着"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>